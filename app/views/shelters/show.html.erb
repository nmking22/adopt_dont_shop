<header><%= link_to 'Shelters Index', '/shelters' %> <%= link_to 'Pets Index', '/pets' %></header>

<h1><%= @shelter.name %></h1>

<p><%= "Address: #{@shelter.address}" %></p>
<p><%= "City: #{@shelter.city}" %></p>
<p><%= "State: #{@shelter.state}" %></p>
<p><%= "Zip Code: #{@shelter.zip}" %></p>

<%= link_to 'Update Shelter', "/shelters/#{@shelter.id}/edit" %>

<%= link_to 'Delete Shelter', "/shelters/#{@shelter.id}/destroy", data: {:confirm => "Are you sure you want to delete #{@shelter.name}?"}, :method => :delete %>
