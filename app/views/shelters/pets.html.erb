<header><%= link_to 'Shelters Index', '/shelters' %> <%= link_to 'Pets Index', '/pets' %></header>

<h1><%= link_to "#{@shelter.name}", "/shelters/#{@shelter.id}" %><%= " Available Pets" %></h1>

<% @pets.each do |pet| %>
  <h2><%= link_to "#{pet.name}", "/pets/#{pet.id}" %></h2>
  <img src= <%= pet.image %> alt = <%= pet.name %> height="200">
  <p><%= "Description: #{pet.description}" %></p>
  <p><%= "Age: #{pet.age}" %></p>
  <p><%= "Sex: #{pet.sex}" %></p>
  <p><%= "Adoption Status: #{pet.adoption_status}" %></p>
<% end %>

<%= link_to 'Create Pet', "/shelters/#{@shelter.id}/pets/new" %>
